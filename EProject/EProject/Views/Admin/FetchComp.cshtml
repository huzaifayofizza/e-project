@model IEnumerable<EProject.Models.Competition>

@{
    Layout = "_LayoutAdmin";
}

<div class="container mt-5">

    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header"> <span style="color: #F7631B;"> <h5> OnGoing Competition </h5></span></></div>
            <div class="card-body">
                <p class="card-title"></p>
                <table class="table table-hover" id="dataTables-example" width="100%">
                    <thead>
                        <tr>
                            <th>Competition Title</th>
                            <th>Competition Banner</th>
                            <th>Competition Start-Date</th>
                            <th>Competition End-Date</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                                <td>@item.CompetitionTitle</td>
                                 <td> <img src="~/@item.CompetitionBanner" class="d-flex m-auto" width="100" height="100" alt="..."></td>
                                <td>@item.CompStartDate</td>
                                <td>@item.CompEndDate</td>
                                <td><a class="btn btn fw-bold text-white" style="background-color: #00B5AD;" asp-controller="Admin" asp-action="EditCompetition" asp-route-id="@item.CompetitionId">Update</a></td>
                                <td><a class="btn btn-danger fw-bold text-white" asp-controller="Admin" asp-action="DeleteCompetition" asp-route-id="@item.CompetitionId">Delete</a></td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
@{
    string alertmessage = TempData["Message"] as string;
}
@{
    string Delmessage = TempData["DelMessage"] as string;
}
@{
    string UpdateMessage = TempData["UpdateMessage"] as string;
}
@if (!string.IsNullOrEmpty(alertmessage))
{
    <script>
        alert("@alertmessage");
    </script>
}
@if (!string.IsNullOrEmpty(Delmessage))
{
    <script>
        alert("@Delmessage");
    </script>
}
@if (!string.IsNullOrEmpty(UpdateMessage))
{
    <script>
        alert("@UpdateMessage");
    </script>
}