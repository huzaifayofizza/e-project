@model IEnumerable<EProject.Models.Posting>
@using System.Security.Claims;
@{
    string userName = User.FindFirst(ClaimTypes.Name)?.Value;
}
@{
    Layout = "_LayoutStaff";
}

<div class="container mt-5">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header"> <span style="color: #F7631B;"> <h5> OnGoing Competition </h5></span></></div>
            <div class="card-body">
                <p class="card-title"></p>
                <table class="table table-hover" id="dataTables-example" width="100%">
                    <thead>
                        <tr>


                            <th>Name</th>
                            <th>Image</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model)
                        {
                            <tr>
                                @if (userName != null)
                                {
                                    <td>@userName 
                                    </td>
                                }
                                <td><img src="~/@item.PostImg" class="d-flex m-auto" width="100" height="100" alt="..."></td>
                            <td>@item.PostDate</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>